{
  "name": "ts-auto-guard",
  "version": "0.0.0",
  "description": "Generate type guard functions from TypeScript interfaces",
  "main": "lib/index.js",
  "scripts": {
    "test": "NODE_ENV=test && tape -r ts-node/register tests/**/*.ts | tap-spec",
    "build": "tsc && chmod 775 lib/cli.js",
    "format": "tslint --fix --project ./tsconfig.json && prettier --single-quote --trailing-comma es5 --write --no-semi src/**/*.ts",
    "format-watch": "onchange src/**/*.ts -- yarn run format {{changed}}"
  },
  "bin": {
    "ts-auto-guard": "./lib/cli.js"
  },
  "author": "Rhys van der Waerden",
  "license": "MIT",
  "dependencies": {
    "@types/lodash": "^4.14.116",
    "lodash": "^4.17.10",
    "make-error": "^1.3.4",
    "ts-simple-ast": "^13.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^10.7.0",
    "@types/tape": "^4.2.32",
    "onchange": "^4.1.0",
    "prettier": "^1.14.2",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "ts-node": "^7.0.1"
  }
}
